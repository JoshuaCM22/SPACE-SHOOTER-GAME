<Window x:Class="SPACE_SHOOTER_GAME.Window_DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPACE_SHOOTER_GAME"
        mc:Ignorable="d"
        Title=""  Height="200" Width="350">
    <Canvas Name="MyCanvas" Focusable="True" Background="White">
        <Label FontSize="24" Name="lblTitle" Content="GAME OVER" Foreground="Black" FontWeight="Bold" Canvas.Top="16" Canvas.Left="101" Height="43" />
        <Label FontSize="16" Name="lblDescription" Content="Do you want to play again?" Foreground="Black" FontWeight="Normal" Canvas.Top="64" Canvas.Left="75" Height="32" />

        <Button Name="btnYes" Content="Yes" FontSize="16" FontWeight="Normal"  Click="btnYes_Click" Canvas.Left="60" Canvas.Top="115" Height="30" Width="90" Cursor="Hand"/>
        <Button Name="btnNo" Content="No" FontSize="16" FontWeight="Normal"  Click="btnNo_Click" Canvas.Left="188" Canvas.Top="115" Height="30" Width="90" Cursor="Hand"/>

    </Canvas>
</Window>

